# Smart Reach Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from your Stripe dashboard
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_WEBHOOK_SECRET_LIVE=whsec_your_stripe_live_webhook_secret_here

# =============================================================================
# GOOGLE CONFIGURATION
# =============================================================================
# Google OAuth credentials for Gmail integration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Google AI API for email generation
GOOGLE_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production, update these URLs to your actual domain
# GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/callback

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Add any additional environment variables here
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://yourdomain.com 